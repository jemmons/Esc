{
    "identifier": "com.mcmxcix.nova.esc",
    "name": "Esc",
    "organization": "MCMXCIX LLC",
    "description": "A collection of common (un)escapes.",
    "version": "1.0",
    "categories": ["commands"],
    
    "main": "main.js",
    
    "activationEvents": [
        "*"
    ],
    
    "entitlements": {
    },
    
    "commands": {
        "editor": [
            {
                "title": "Encode Query",
                "command": "esc.percentEncode",
                "when": "editorHasSelection"
            },
            {
                "title": "Decode Query",
                "command": "esc.percentDecode",
                "when": "editorHasSelection"
            },
            {
                "title": "Encode Base64",
                "command": "esc.base64Encode",
                "when": "editorHasSelection"
            },
            {
                "title": "Decode Base64",
                "command": "esc.base64Decode",
                "when": "editorHasSelection"
            }
        ]
    }
}
